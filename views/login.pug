extends base

block content 
    main.main 
        .login-form 
            h2.heading-secondary.ma-bt-lg Log into your account 
            form.form.form--login
                .form__group 
                    label.form__label(for="email") Email address 
                    input#email.form__input(type='email', placeholder='your@example.com', required) 
                .form__group.ma-bt-md 
                    label.form_label(for="password") Password 
                    input#password.form__input(type='password', required, min-length='8', placeholder='************')
                .form__group 
                    button.btn.btn--green Login